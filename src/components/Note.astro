---
const {heading,content} = Astro.props;
---

<div class="flex flex-col w-full h-fit p-4 rounded-[0.575rem] bg-secondary gap-2 my-[1rem]">
    <div class="flex gap-2 items-center justify-start w-full flex-wrap">
        <img src="/info.svg" class="svg-image">
        <h5>{heading}</h5>
    </div>
    <p>
        {content}
    </p>
</div>